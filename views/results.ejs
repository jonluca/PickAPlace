<% include partials/header%>
<div class="container">
	<div class="row text-center">
		<div id="rating" class="col-lg-4">
			<h1 class="category">Best Rating</h1>
			<div class="name">
				<%= rating.name%>
			</div>
			<img class="restImage" src="<%=rating.image_url%>">
			<div class="info">
				<%= rating.price%>
				<br>
				<%= rating.display_phone%>
				<br>
				Rating: <%= rating.rating%>
				<br>
				Distance: <%= rating.distance %>
			</div>
			<a target="_blank" href="<%= rating.uri%>" class="btn btn-default" id="goRating" >Take me here!</a>
		</div>
		<div id="price" class="col-lg-4">
			<h1 class="category">Lowest Price</h1>
			<div class="name">
				<%= price.name%>
			</div>
			<img class="restImage" src="<%=price.image_url%>">
			<div class="info">
				<%= price.price%>
				<br>
				<%= price.display_phone%>
				<br>
				Rating: <%= price.rating%>
				<br>
				Distance: <%= price.distance%>
			</div>
			<a target="_blank" href="<%= price.uri%>" class="btn btn-default" id="goPrice">Take me here!</a>
		</div>
		<div id="distance" class="col-lg-4">
			<h1 class="category">Closest</h1>
			<div class="name">
				<%= distance.name%>
			</div>
			<img class="restImage" src="<%=distance.image_url%>">
			<div class="info">
				<%= distance.price%>
				<br>
				<%= distance.display_phone%>
				<br>
				Rating: <%= distance.rating%>
				<br>
				Distance: <%= distance.distance%>
			</div>
			<a target="_blank" href="<%= distance.uri%>" class="btn btn-default" id="goPrice">Take me here!</a>
		</div>
	</div>
</div>
<% include partials/footer%>